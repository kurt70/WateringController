{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "TimestampFormat": "HH:mm:ss "
    }
  },
  "Mqtt": {
    "Host": "localhost",
    "Port": 1883,
    "UseTls": false,
    "TopicPrefix": "home/veranda"
  },
  "Database": {
    "ConnectionString": "Data Source=watering.dev.db"
  },
  "Safety": {
    "WaterLevelStaleMinutes": 10,
    "AutoStopCheckIntervalSeconds": 5
  },
  "Scheduling": {
    "CheckIntervalSeconds": 30
  },
  "DevMqtt": {
    "AutoStart": true
  },
  "OpenTelemetry": {
    "Enabled": true,
    "Site": "home/veranda",
    "ServiceName": "WateringController.Backend",
    "ServiceVersion": "dev",
    "OtlpEndpoint": "http://localhost:4317",
    "FrontendTraceProxyTarget": "http://localhost:4318/v1/traces",
    "ExportLogs": true,
    "ExportMetrics": true
  }
}
