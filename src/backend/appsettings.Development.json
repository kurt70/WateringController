{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "TimestampFormat": "HH:mm:ss "
    }
  },
  "Mqtt": {
    "Host": "localhost",
    "Port": 1883,
    "UseTls": false,
    "TopicPrefix": "home/veranda"
  },
  "Database": {
    "ConnectionString": "Data Source=watering.dev.db"
  },
  "Safety": {
    "WaterLevelStaleMinutes": 10
  },
  "Scheduling": {
    "CheckIntervalSeconds": 30
  },
  "DevMqtt": {
    "AutoStart": true
  }
}
