{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      "TimestampFormat": "HH:mm:ss "
    }
  },
  "Mqtt": {
    "Host": "localhost",
    "Port": 1883,
    "UseTls": false,
    "ClientId": "watering-backend",
    "KeepAliveSeconds": 30,
    "ReconnectSeconds": 5,
    "TopicPrefix": "home/veranda"
  },
  "Database": {
    "ConnectionString": "Data Source=watering.db"
  },
  "Environment": {
    "WATERING_DB_PATH": ""
  },
  "Safety": {
    "WaterLevelStaleMinutes": 10,
    "AutoStopCheckIntervalSeconds": 5
  },
  "Scheduling": {
    "CheckIntervalSeconds": 30
  },
  "OpenTelemetry": {
    "Enabled": false,
    "Site": "home/veranda",
    "ServiceName": "WateringController.Backend",
    "ServiceVersion": "1.0.0",
    "OtlpEndpoint": "http://localhost:4317",
    "FrontendTraceProxyTarget": "http://localhost:4318/v1/traces",
    "ExportLogs": true,
    "ExportMetrics": true
  },
  "AllowedHosts": "*"
}
