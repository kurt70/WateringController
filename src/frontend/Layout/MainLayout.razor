@inherits LayoutComponentBase
@implements IAsyncDisposable
@inject WateringHubClient HubClient
@inject ILogger<MainLayout> Logger
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        try
        {
            await HubClient.StartAsync();
        }
        catch (Exception ex)
        {
            // SignalR may be temporarily unavailable during startup; pages use HTTP fallbacks.
            Logger.LogWarning(ex, "SignalR startup failed in layout initialization.");
        }
    }

    public async ValueTask DisposeAsync()
    {
        await HubClient.StopAsync();
    }
}
